<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LessonDetailController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Lesson Title -->
    <Label fx:id="lessonTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10"/>

    <!-- Text Area for lesson content -->
    <TextArea fx:id="lessonContentText" wrapText="true" editable="false" prefHeight="200" prefWidth="580" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="40"/>

    <!-- Image View for lesson images -->
    <ImageView fx:id="lessonContentImage" fitWidth="300" fitHeight="200" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="250"/>

</AnchorPane>
